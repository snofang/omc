server 192.168.255.0 255.255.255.0
verb {{ ovpn_verb }}
key {{ ovpn_data_pki }}/private/{{ ovpn_name }}.key
ca {{ ovpn_data_pki }}/ca.crt
cert {{ ovpn_data_pki }}/issued/{{ ovpn_name }}.crt
dh {{ ovpn_data_pki }}/dh.pem
tls-auth {{ ovpn_data_pki }}/ta.key

key-direction 0
keepalive 10 120
persist-key
persist-tun

proto {{ ovpn_proto_by_version }}
port {{ ovpn_port }}
dev tun{{ ovpn_dev_no }}
status /tmp/openvpn-status.log
topology subnet

user nobody
group nogroup
cipher {{ ovpn_cipher }}
data-ciphers AES-128-GCM:AES-256-GCM
comp-lzo no

### Route Configurations
ifconfig-pool-persist ipp.txt
route 192.168.255.0 255.255.255.0

### Push Configurations
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 8.8.4.4"
push "comp-lzo no"

